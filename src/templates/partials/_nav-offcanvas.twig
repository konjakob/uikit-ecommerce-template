<div id="nav-offcanvas" uk-offcanvas="overlay: true">
	<aside class="uk-offcanvas-bar uk-padding-remove">
		<div class="uk-card uk-card-default uk-card-small tm-shadow-remove">
			<header class="uk-card-header uk-flex uk-flex-middle">
				<div><a class="uk-link-muted uk-text-bold" href="#">{{ shopInfo.phone }}</a>
					<div class="uk-text-xsmall uk-text-muted" style="margin-top: -2px;">
						<div>{{ shopInfo.address }}</div>
						<div>{{ shopInfo.openingHours }}</div>
					</div>
				</div>
			</header>
			<nav class="uk-card-small uk-card-body">
				<ul class="uk-nav-default uk-nav-parent-icon uk-list-divider" uk-nav>
				  {% for item in navbarMenu %}
					<li class="uk-parent"><a href="{{ item.href }}">{{ item.name }}</a>
					  {% if item.items is iterable %}
						<ul class="uk-nav-sub uk-list-divider">
						  {% for category in item.items %}
							<li><a href="subcategory.html">{{ category.name }}</a></li>
						  {% endfor %}
						  {% if item.name == "Catalog" %}
							<li class="uk-text-center"><a class="uk-link-muted uk-text-uppercase tm-link-to-all" href="{{ item.href }}"><span>see all categories</span><span uk-icon="icon: chevron-right; ratio: .75;"></span></a></li>
						  {% endif %}
						  {% if item.name == "Brands" %}
							<li class="uk-text-center"><a class="uk-link-muted uk-text-uppercase tm-link-to-all" href="{{ item.href }}"><span>see all brands</span><span uk-icon="icon: chevron-right; ratio: .75;"></span></a></li>
						  {% endif %}
						</ul>
					  {% endif %}
					</li>
				  {% endfor %}
					 <li><a href="compare.html">Compare<span class="uk-badge uk-margin-xsmall-left">3</span></a></li>
				</ul>
			</nav>
			<nav class="uk-card-small uk-card-body">
				<ul class="uk-nav uk-nav-default">
				  {% for item in toolbarMenu %}
					<li><a href="{{ item.href }}">{{ item.name }}</a></li>
				  {% endfor %}
				</ul>
			</nav>
			<nav class="uk-card-body">
				<ul class="uk-iconnav uk-flex-center">
				  {% for social in socials %}
					<li><a href="#" title="{{ social.name }}" uk-icon="{{ social.icon }}"></a></li>
				  {% endfor %}
				</ul>
			</nav>
		</div>
	</aside>
</div>